@model AppliedProg2.Models.IncidentReportViewModel
@{
    ViewData["Title"] = "Report Incident";
}

@section Styles {
    <style>
        :root {
            --primary-black: #0a0a0a;
            --dark-gray: #1a1a1a;
            --light-gray: #2a2a2a;
            --accent-orange: #ff8c00;
            --light-orange: #ffa500;
            --white: #ffffff;
            --text-gray: #d1d5db;
            --urgent-red: #dc2626;
            --warning-orange: #f59e0b;
            --success-green: #10b981;
            --card-bg: rgba(30, 30, 30, 0.95);
            --form-bg: rgba(40, 40, 40, 0.8);
        }

        .incident-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(255, 140, 0, 0.1) 0%, rgba(10, 10, 10, 0.9) 100%), url('https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            background-blend-mode: overlay;
            padding: 40px 20px;
        }

        .incident-card {
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
            border: 1px solid rgba(255, 140, 0, 0.2);
            backdrop-filter: blur(20px);
            overflow: hidden;
            width: 100%;
            max-width: 800px;
        }

        .card-header {
            background: linear-gradient(135deg, var(--dark-gray) 0%, rgba(220, 38, 38, 0.3) 100%);
            color: var(--white);
            padding: 2.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(220, 38, 38, 0.3);
        }

            .card-header h4 {
                font-weight: 700;
                margin: 0;
                font-size: 2rem;
                letter-spacing: -0.5px;
            }

            .card-header i {
                margin-right: 12px;
                font-size: 1.8rem;
                color: var(--white);
            }

        .card-body {
            padding: 3rem;
        }

        .incident-decoration {
            text-align: center;
            margin-bottom: 2.5rem;
            padding: 2rem;
            background: var(--form-bg);
            border-radius: 12px;
            border: 1px solid rgba(255, 140, 0, 0.2);
        }

        .decoration-icons {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--accent-orange);
        }

            .decoration-icons i {
                margin: 0 8px;
                opacity: 0.9;
            }

        .form-group {
            margin-bottom: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--light-orange);
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            font-size: 1.1rem;
        }

            .form-label i {
                margin-right: 10px;
                font-size: 1.2rem;
                width: 20px;
                text-align: center;
            }

            .form-label.required::after {
                content: ' *';
                color: var(--urgent-red);
            }

        .form-control {
            border: 2px solid rgba(255, 140, 0, 0.3);
            border-radius: 10px;
            padding: 14px 18px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: var(--form-bg);
            color: var(--white);
            backdrop-filter: blur(10px);
        }

            .form-control:focus {
                border-color: var(--accent-orange);
                box-shadow: 0 0 0 3px rgba(255, 140, 0, 0.2);
                background: var(--form-bg);
                color: var(--white);
            }

            .form-control::placeholder {
                color: var(--text-gray);
                opacity: 0.6;
            }

            .form-control.urgent-field {
                border-left: 4px solid var(--urgent-red);
            }

            .form-control.important-field {
                border-left: 4px solid var(--warning-orange);
            }

        textarea.form-control {
            resize: vertical;
            min-height: 120px;
            line-height: 1.5;
        }

        .form-select {
            appearance: none;
            background: radial-gradient(circle at 20% 80%, rgba(255, 123, 0, 0.15) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 123, 0, 0.1) 0%, transparent 50%), url('https://i.pinimg.com/1200x/59/b1/03/59b10355a3cc4e6de0986700b7ed4017.jpg');
            background-position: right 18px center;
            background-repeat: no-repeat;
            background-size: 16px 12px;
        }

        .btn-submit {
            background: linear-gradient(135deg, var(--urgent-red), #b91c1c);
            border: none;
            border-radius: 10px;
            padding: 16px 35px;
            font-weight: 700;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(220, 38, 38, 0.4);
            color: var(--white);
            letter-spacing: 0.5px;
        }

            .btn-submit:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 25px rgba(220, 38, 38, 0.5);
                background: linear-gradient(135deg, #b91c1c, var(--urgent-red));
            }

        .btn-cancel {
            background: transparent;
            border: 2px solid var(--text-gray);
            border-radius: 10px;
            padding: 16px 35px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            color: var(--text-gray);
        }

            .btn-cancel:hover {
                transform: translateY(-3px);
                background: var(--text-gray);
                color: var(--primary-black);
                border-color: var(--text-gray);
            }

            .btn-submit i, .btn-cancel i {
                margin-right: 10px;
            }

        .text-danger {
            color: var(--urgent-red) !important;
            font-size: 0.9rem;
            margin-top: 6px;
            display: flex;
            align-items: center;
            font-weight: 500;
        }

            .text-danger i {
                margin-right: 6px;
            }

        .alert-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.05));
            border: 1px solid var(--success-green);
            border-radius: 10px;
            color: var(--success-green);
            font-weight: 600;
            padding: 1.25rem 1.5rem;
            margin-bottom: 2rem;
            backdrop-filter: blur(10px);
        }

            .alert-success i {
                margin-right: 10px;
            }

        .form-hint {
            font-size: 0.85rem;
            color: var(--text-gray);
            margin-top: 6px;
            display: flex;
            align-items: center;
            opacity: 0.8;
        }

            .form-hint i {
                margin-right: 6px;
                width: 14px;
                text-align: center;
            }

        .validation-summary-errors {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.1), rgba(185, 28, 28, 0.05));
            border: 1px solid var(--urgent-red);
            border-radius: 10px;
            padding: 1.25rem;
            margin-bottom: 2rem;
            color: var(--urgent-red);
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 1.25rem;
            }

            .validation-summary-errors li {
                margin-bottom: 0.5rem;
            }

                .validation-summary-errors li:last-child {
                    margin-bottom: 0;
                }

        .btn-group {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2.5rem;
        }

        media (max-width: 768px) {
            .incident-container

        {
            padding: 20px 15px;
        }

        .card-body {
            padding: 2rem 1.5rem;
        }

        .card-header {
            padding: 2rem 1.5rem;
        }

            .card-header h4 {
                font-size: 1.6rem;
            }

        .btn-group {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-submit, .btn-cancel {
            width: 100%;
            padding: 14px 25px;
        }

        .decoration-icons i {
            margin: 0 5px;
            font-size: 2rem;
        }

        }

        .btn-submit.loading {
            position: relative;
            color: transparent;
        }

            .btn-submit.loading::after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin-left: -10px;
                margin-top: -10px;
                border: 2px solid var(--white);
                border-radius: 50%;
                border-top-color: transparent;
                animation: spin 1s linear infinite;
            }

        keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }
    </style>
}

<div class="incident-container">
    <div class="incident-card">
        <div class="card-header">
            <h4><i class="fas fa-exclamation-triangle"></i> Report Emergency Incident</h4>
        </div>
        <div class="card-body">
            <div class="incident-decoration">
                <div class="decoration-icons">
                    <i class="fas fa-exclamation-triangle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-bell"></i>
                    <i class="fas fa-bullhorn"></i>
                </div>
                <p class="mb-0" style="color: var(--text-gray); font-size: 1.1rem;">
                    <strong style="color: var(--light-orange);">Urgent Notice:</strong> Please provide accurate information to ensure swift emergency response
                </p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Report" method="post" id="incidentForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger validation-summary-errors"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label required">
                        <i class="fas fa-heading"></i>Incident Title
                    </label>
                    <input asp-for="Title" class="form-control urgent-field" placeholder="e.g., Major Flooding in Downtown Area" />
                    <span asp-validation-for="Title" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                    <div class="form-hint"><i class="fas fa-lightbulb"></i>Be specific and concise about the emergency</div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label required">
                        <i class="fas fa-file-alt"></i>Incident Description
                    </label>
                    <textarea asp-for="Description" class="form-control urgent-field" rows="4" placeholder="Provide detailed information about what happened, current situation, immediate dangers, and any visible damage or injuries..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                    <div class="form-hint"><i class="fas fa-info-circle"></i>Include critical details that emergency responders need to know</div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Location" class="form-label required">
                                <i class="fas fa-map-marker-alt"></i>Incident Location
                            </label>
                            <input asp-for="Location" class="form-control urgent-field" placeholder="e.g., Central District, Riverside Area" />
                            <span asp-validation-for="Location" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                            <div class="form-hint"><i class="fas fa-map-pin"></i>Be as specific as possible about the location</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IncidentDate" class="form-label required">
                                <i class="fas fa-calendar-alt"></i>Date & Time
                            </label>
                            <input asp-for="IncidentDate" class="form-control important-field" type="datetime-local" />
                            <span asp-validation-for="IncidentDate" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                            <div class="form-hint"><i class="fas fa-clock"></i>When did the incident occur or when was it discovered?</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DisasterType" class="form-label required">
                                <i class="fas fa-cloud-showers-heavy"></i>Disaster Type
                            </label>
                            <select asp-for="DisasterType" class="form-control important-field">
                                <option value="">Select Disaster Type</option>
                                <option value="Flood">Flood</option>
                                <option value="Fire">Fire</option>
                                <option value="Earthquake">Earthquake</option>
                                <option value="Storm">Storm</option>
                                <option value="Drought">Drought</option>
                                <option value="Landslide">Landslide</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="DisasterType" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UrgencyLevel" class="form-label required">
                                <i class="fas fa-bell"></i>Urgency Level
                            </label>
                            <select asp-for="UrgencyLevel" class="form-control urgent-field">
                                <option value="">Select Urgency Level</option>
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                                <option value="Critical">Critical</option>
                            </select>
                            <span asp-validation-for="UrgencyLevel" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AffectedAreas" class="form-label">
                        <i class="fas fa-map"></i>Affected Areas
                    </label>
                    <input asp-for="AffectedAreas" class="form-control important-field" placeholder="e.g., Residential neighborhoods, Schools, Hospitals, Major roads" />
                    <span asp-validation-for="AffectedAreas" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                    <div class="form-hint"><i class="fas fa-building"></i>List specific communities, buildings, or infrastructure affected</div>
                </div>

                <div class="btn-group">
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-submit" id="submitButton">
                        <i class="fas fa-paper-plane"></i> Submit Emergency Report
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add loading state to button on form submit
        document.getElementById('incidentForm').addEventListener('submit', function () {
            const button = document.getElementById('submitButton');
            button.classList.add('loading');
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-paper-plane"></i> Submitting Emergency Report...';
        });

        // Auto-set current date and time if field is empty
        const dateTimeField = document.querySelector('input[type="datetime-local"]');
        if (dateTimeField && !dateTimeField.value) {
            const now = new Date();
            // Format to datetime-local format (YYYY-MM-DDTHH:MM)
            const formatted = now.toISOString().slice(0, 16);
            dateTimeField.value = formatted;
        }

        // Add urgency level visual feedback
        const urgencySelect = document.querySelector('select[name="UrgencyLevel"]');
        if (urgencySelect) {
            urgencySelect.addEventListener('change', function () {
                const selectedValue = this.value;
                const form = this.closest('form');

                // Remove existing urgency classes
                form.classList.remove('urgency-low', 'urgency-medium', 'urgency-high', 'urgency-critical');

                // Add appropriate urgency class
                if (selectedValue) {
                    form.classList.add('urgency-' + selectedValue.toLowerCase());
                }
            });
        }

        // Character counter for description
        const descriptionField = document.querySelector('textarea[name="Description"]');
        if (descriptionField) {
            const counter = document.createElement('div');
            counter.className = 'form-hint';
            counter.style.textAlign = 'right';
            descriptionField.parentElement.appendChild(counter);

            descriptionField.addEventListener('input', function () {
                const count = this.value.length;
                counter.innerHTML = `<i class="fas fa-text-height"></i>${count} characters (minimum 50 recommended)`;

                if (count < 50) {
                    counter.style.color = 'var(--urgent-red)';
                } else if (count < 100) {
                    counter.style.color = 'var(--warning-orange)';
                } else {
                    counter.style.color = 'var(--success-green)';
                }
            });

            // Trigger initial count
            descriptionField.dispatchEvent(new Event('input'));
        }
    </script>
}