                donor: "John Smith",
                status: "Distributed",
                time: "10:30 AM",
                instructions: ""
            },
            {
                type: "Food",
                date: "Dec 12, 2023",
                title: "Canned Goods and Non-Perishables",
                quantity: "50 boxes",
                area: "Local Shelter",
                donor: "Sarah Johnson",
                status: "Received",
                time: "02:15 PM",
                instructions: "Requires refrigeration for dairy items"
            },
            {
                type: "Clothing",
                date: "Dec 10, 2023",
                title: "Winter Clothing Collection",
                quantity: "200 items",
                area: "Homeless Outreach",
                donor: "Community Center",
                status: "Pending",
                time: "09:45 AM",
                instructions: ""
            }
        ];

        // Function to get donation type class
        function getDonationTypeClass(type) {
            switch(type.toLowerCase()) {
                case "food": return "bg-warning text-dark";
                case "clothing": return "bg-info text-white";
                case "medical": return "bg-danger text-white";
                case "money": return "bg-success text-white";
                default: return "bg-secondary text-white";
            }
        }

        // Function to get donation type icon
        function getDonationTypeIcon(type) {
            switch(type.toLowerCase()) {
                case "food": return "🍽️";
                case "clothing": return "👕";
                case "medical": return "🏥";
                case "money": return "💰";
                default: return "🎁";
            }
        }

        // Function to get status class
        function getStatusClass(status) {
            switch(status.toLowerCase()) {
                case "pending": return "bg-warning text-dark";
                case "received": return "bg-info text-white";
                case "distributed": return "bg-success text-white";
                case "cancelled": return "bg-danger text-white";
                default: return "bg-secondary text-white";
            }
        }

        // Function to get status icon
        function getStatusIcon(status) {
            switch(status.toLowerCase()) {
                case "pending": return "⏳";
                case "received": return "📦";
                case "distributed": return "✅";
                case "cancelled": return "❌";
                default: return "❓";
            }
        }
    </script>
